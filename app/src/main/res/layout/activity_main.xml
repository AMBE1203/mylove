<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.muase.iloveyou.MainActivity">

    <TextView
        android:id="@+id/text_i_love_you"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_padding_130"
        android:gravity="center_horizontal"
        android:padding="@dimen/margin_padding_5"
        android:text="EM CÓ YÊU ANH KHÔNG ?"
        android:textSize="@dimen/text_size_30"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:textColor="@color/tim"/>

    <Button
        android:id="@+id/btn_yes"
        android:layout_width="@dimen/size_button"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_i_love_you"
        android:layout_marginLeft="@dimen/margin_padding_30"
        android:layout_marginTop="@dimen/margin_padding_130"
        android:background="@drawable/selector_button_grey"
        android:text="Có"
        android:fontFamily="cursive"
        android:textAllCaps="false"
        android:textSize="@dimen/text_size_30"/>

    <Button
        android:id="@+id/btn_no"
        android:layout_width="@dimen/size_button"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/text_i_love_you"
        android:layout_marginRight="@dimen/margin_padding_30"
        android:layout_marginTop="@dimen/margin_padding_130"
        android:background="@drawable/selector_button_grey"
        android:text="Không"
        android:fontFamily="cursive"
        android:textAllCaps="false"
        android:textSize="@dimen/text_size_30"/>

    <ImageView
        android:id="@+id/img_meu"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_meu1"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/img_love"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_kvtm"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tv_fb_admin"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Facebook My Girl"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:layout_marginBottom="5dp"/>
</RelativeLayout>
